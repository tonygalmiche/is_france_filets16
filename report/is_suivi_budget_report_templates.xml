<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="is_suivi_budget_external_layout_standard">
        <t t-set="company" t-value="res_company"/>
        <div t-attf-class="header" t-att-style="report_header_style">
        </div>
        <div t-attf-class="article o_report_layout_standard" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <div t-attf-class="footer o_standard_footer">
        </div>
    </template>

    <template id="is_suivi_budget_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-call="is_france_filets16.is_suivi_budget_external_layout_standard"><t t-out="0"/></t>
    </template>

    <template id="is_suivi_budget_report_document">
        <t t-call="is_france_filets16.is_suivi_budget_external_layout">
            <div class="page">
                <style>
                    h1{
                        text-align:center;
                    }
                    th{
                        font-size:10pt;
                        padding:2pt;
                        border:1px solid black;
                        text-align:center;
                        background-color:LawnGreen;
                    }
                    td{
                        font-size:10pt;
                        padding:2pt;
                        margin:2pt;
                        border:1px solid black;
                    }
                    .titre{
                        font-size:11pt;
                        font-weight: bold;
                        background-color:Gainsboro;
                        margin:2pt;
                    }
                    .titre-right{
                        font-size:11pt;
                        font-weight: bold;
                        background-color:Gainsboro;
                        margin:2pt;
                        text-align:right;
                        padding-right: 1em;
                        white-space: nowrap;
                    }
                    .style1{
                        font-size:10pt;
                        text-align: right;
                        padding-right: 1em;
                        white-space: nowrap;
                    }
                    .style2{
                        font-size:11pt;
                        font-weight: bold;
                        text-align: right;
                        padding-right: 1em;
                        white-space: nowrap;
                    }



                </style>
                <h1><span t-field="o.name"/> imprim√© le <t t-raw="o.get_now()"/></h1>
                <div t-raw="o.get_html()"/>
            </div>
        </t>
    </template>
    
    <template id="is_suivi_budget_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="is_france_filets16.is_suivi_budget_report_document"/>
            </t>
        </t>
    </template>
</odoo>