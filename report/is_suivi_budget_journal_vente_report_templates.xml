    <template id="is_suivi_budget_journal_vente_external_layout_standard">
        <t t-set="company" t-value="res_company"/>
        <div t-attf-class="header" t-att-style="report_header_style">
        </div>
        <div t-attf-class="article o_report_layout_standard" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
        <div t-attf-class="footer o_standard_footer">
        </div>
    </template>

    <template id="is_suivi_budget_journal_vente_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-call="is_france_filets16.is_suivi_budget_external_layout_standard"><t t-out="0"/></t>
    </template>




    <template id="is_suivi_budget_journal_vente_report_document">
        <t t-call="is_france_filets16.is_suivi_budget_journal_vente_external_layout">
            <div class="page">
                <style>
                    h1{
                        text-align:center;
                        font-size:13pt;
                    }
                    th{
                        font-size:11pt;
                        padding:1pt;
                        border:1px solid black;
                        text-align:center;
                        background-color:LawnGreen;
                    }
                    td{
                        font-size:11pt;
                        padding:0pt;
                        margin:0pt;
                        padding-left:5pt;
                        padding-right:5pt;
                        border:1px solid black;
                    }
                    .titre{
                        font-size:12pt;
                        font-weight: bold;
                        background-color:Gainsboro;
                        margin:2pt;
                    }
                    .style1{
                        font-size:11pt;
                        text-align: right;
                        padding-right: 1em;
                        white-space: nowrap;
                    }
                </style>
                <h1>Journal des ventes du <span t-field="o.date_debut"/> au <span t-field="o.date_fin"/></h1>
                <div t-raw="o.get_journal_vente_html()"/>
            </div>
        </t>
    </template>


    <template id="is_suivi_budget_journal_vente_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="is_france_filets16.is_suivi_budget_journal_vente_report_document"/>
            </t>
        </t>
    </template>



</odoo>
